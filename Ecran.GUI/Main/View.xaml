<Window x:Class="Ecran.GUI.Main.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Local="clr-namespace:Ecran.GUI.Main"
        mc:Ignorable="d"
        Title="{x:Static Local:Resource.Codename}"
        Width="240"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="Height" Icon="/Ecran.GUI;component/icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel VerticalAlignment="Center"
                    Grid.Row="0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Label Content="{x:Static Local:Resource.Codename}"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       FontFamily="Segoe UI Light"
                       Foreground="#47248e" Padding="0"
                       Margin="0,0,2.5,0"></Label>
                <Label Content="{x:Static Local:Resource.Name}"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       FontFamily="Segoe UI Light"
                       Foreground="Gray" Padding="0"
                       Margin="2.5,0,0,0"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Label Content="{x:Static Local:Resource.Version}"
                       HorizontalAlignment="Center"
                       Foreground="#d3d3d3"/>
                <Label Content="//"
                       HorizontalAlignment="Center"
                       Foreground="#d3d3d3"/>
                <Label Content="{x:Static Local:Resource.Author}"
                       HorizontalAlignment="Center"
                       Foreground="#d3d3d3"/>
            </StackPanel>
        </StackPanel>

        <!-- Video Options -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center">
            <Label Content="Resolution:"/>
            <DockPanel>
                <Label Content="Width:"
                       Width="50"/>
                <TextBox VerticalContentAlignment="Center"
                         MaxLength="5"
                         Text="{Binding Width}"/>
            </DockPanel>
            <DockPanel Margin="0,2,0,0">
                <Label Content="Height:"
                       Width="50"/>
                <TextBox VerticalContentAlignment="Center"
                         MaxLength="5"
                         Text="{Binding Height}"/>
            </DockPanel>
        </StackPanel>
        
        <!-- Location & Operations -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    Margin="0,5,0,0">
            <Label Content="Location:"/>
            <TextBox
                VerticalContentAlignment="Center"
                MaxLength="5"
                Text="{Binding Path}"
                Height="25"
                IsReadOnly="True"/>
            <Grid Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Content="Detect blam.sav"
                        Height="25"
                        Background="White"
                        Margin="0,0,1,0"/>
                <Button Grid.Column="1"
                        Content="Browse blam.sav"
                        Height="25"
                        Background="White"
                        Margin="1,0,0,0"
                        Click="Browse"/>
            </Grid>
            <Button Content="Update Profile"
                    Height="25"
                    Margin="0,2,0,0"
                    Background="White"
                    Grid.Column="1"
                    Click="Save"/>
        </StackPanel>

        <!-- Debug Output -->
        <StackPanel Grid.Row="3"
                    VerticalAlignment="Center"
                    Margin="0,5,0,0">
            <Label Content="Output:"/>
            <TextBox Padding="10"
                     Background="#222222"
                     Height="100"
                     FontFamily="Consolas"
                     Foreground="Gray"/>
        </StackPanel>

        <!-- Additional Information -->
        <StackPanel Grid.Row="4">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="About"
                        Height="25"
                        Background="White"
                        Margin="0,0,1,0"
                        Click="Save"/>
                <Button Grid.Column="1" Content="Help"
                        Height="25"
                        Background="White"
                        Margin="1,0,0,0"
                        Click="Save"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
